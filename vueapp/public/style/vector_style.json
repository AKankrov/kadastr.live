{
  "version": 8,
  "name": "cadaster",
  "metadata": {"maputnik:renderer": "mbgljs"},
  "sources": {
    "cadastr": {
      "type": "vector",
      "url": "https://test.tiles.kadastr.live/capabilities/kadastr.json",
      "attribution": "<a target=\"_blank\" href=\"https://github.com/Monstrofil/kadastr.live/\"><img style=\"vertical-align: middle;\" src=\"/static/GitHub_Logo.png\"></a>"
    },
    "raster-tiles": {
      "type": "raster",
      "tiles": [
        "https://a.tile.openstreetmap.org/{z}/{x}/{y}.png",
        "https://b.tile.openstreetmap.org/{z}/{x}/{y}.png",
        "https://c.tile.openstreetmap.org/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "attribution": "OpenStreetMap contributors",
      "maxzoom": 19
    },
    "arcgis-world-imagery-ZYX": {
      "type": "raster",
      "tiles": [
        "https://services.arcgisonline.com/arcgis/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}"
      ],
      "tileSize": 256,
      "attribution": "Esri, Maxar, GeoEye, Earthstar Geographics, CNES/Airbus DS, USDA, USGS, AeroGRID, IGN, and the GIS User Community",
      "maxzoom": 17
    },
    "orto-tiles": {
      "type": "raster",
      "tiles": ["/map/rtile/carto_2240035321813140995/ua/{z}/{x}/{y}.png"],
      "tileSize": 256,
      "attribution": "DZK",
      "maxzoom": 19
    },
    "wms-kadastr-source": {
      "type": "raster",
      "tiles": [
        "https://m1.land.gov.ua/geowebcache/service/wms?bbox={bbox-epsg-3857}&format=image/png&service=WMS&version=1.1.1&request=GetMap&srs=EPSG:3857&transparent=true&width=256&height=256&layers=kadastr"
      ],
      "tileSize": 256,
      "attribution": "ДЗК",
      "maxzoom": 16
    },
    "dummy": {
      "type": "geojson",
      "data": {
        "type": "FeatureCollection",
        "features": []
      }
    }
  },
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "openstreetmap",
      "type": "raster",
      "source": "raster-tiles",
      "minzoom": 0,
      "maxzoom": 22,
      "layout": {"visibility": "visible"}
    },
    {
      "id": "orto-ersi",
      "type": "raster",
      "source": "arcgis-world-imagery-ZYX",
      "minzoom": 0,
      "maxzoom": 22,
      "layout": {"visibility": "none"}
    },
    {
      "id": "orto-tiles",
      "type": "raster",
      "source": "orto-tiles",
      "minzoom": 0,
      "maxzoom": 22,
      "layout": {"visibility": "none"}
    },
    {
      "id": "dzk",
      "type": "raster",
      "source": "wms-kadastr-source",
      "minzoom": 0,
      "maxzoom": 22,
      "layout": {"visibility": "none"}
    },
    {
      "id": "land_polygones",
      "type": "fill",
      "source": "cadastr",
      "source-layer": "land_polygons",
      "layout": {"visibility": "visible"},
      "paint": {
        "fill-opacity": [
          "case",
          ["boolean", ["feature-state", "hover"], false],
          ["literal", 0.85],
          ["literal", 0.5]
        ],
        "fill-color": [
          "case",
          ["boolean", ["==", ["get", "address"], null], false],
          "rgba(41, 162, 200, 1)",
          "rgba(41, 200, 162, 1)"
        ],
        "fill-outline-color": [
          "case",
          ["boolean", ["==", ["get", "address"], null], false],
          "rgba(0, 0, 0, 1)",
          "rgba(0, 0, 0, 1)"
        ]
      }
    },
    {
      "id": "landuse_count_points",
      "type": "symbol",
      "source": "cadastr",
      "source-layer": "centroids",
      "maxzoom": 7,
      "layout": {
        "text-field": "{parcels}",
        "text-font": ["Open Sans Bold"],
        "text-ignore-placement": false,
        "text-allow-overlap": false,
        "text-anchor": "center",
        "text-justify": "center",
        "text-letter-spacing": 0,
        "text-keep-upright": false,
        "text-transform": "none",
        "text-optional": false,
        "text-pitch-alignment": "auto",
        "text-size": {"stops": [[6, 18], [7, 21]]}
      },
      "paint": {
        "text-color": "rgba(0, 0, 0, 1)",
        "text-halo-color": "rgba(255, 255, 255, 1)",
        "text-halo-width": 2
      }
    },
    {
      "id": "landuse_count_background",
      "type": "fill",
      "source": "cadastr",
      "source-layer": "polygons",
      "maxzoom": 8,
      "paint": {
        "fill-color": {
          "stops": [
            [3, "rgba(255, 255, 255, 0.5)"],
            [5, "rgba(255, 255, 255, 0.3)"],
            [8, "rgba(0, 0, 0, 0)"]
          ]
        }
      }
    }
  ],
  "id": "positron"
}